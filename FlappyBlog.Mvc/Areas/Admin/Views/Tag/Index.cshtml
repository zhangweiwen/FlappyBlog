@using System.Globalization
@using FlappyBlog.Domain.Models
@using FlappyBlog.Infrastructure.Paged
@model PagedList<Tag>

@{
    ViewBag.Title = "标签管理";
    Layout = "~/Areas/Admin/Views/Shared/AdminBase.cshtml";
}
@*TODO:改为一个简单的HtmlHelper*@
<div class="toolbar-grid clearfix">
    <div class="row">
        <div class="col-md-8">
            <div class="pull-left">
                <button class="btn btn-primary">添加</button>
                @Html.ActionLink()
            </div>
        </div>
        <div class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control" />
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button">搜索</button>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>名称</th>
                <th>文章数</th>
                <th>描述</th>
                <th>创建时间</th>
                <th style="text-align: center; width: 18%">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model.Items)
            {
                <tr>
                    <td>@tag.Id</td>
                    <td>@tag.Name</td>
                    <td>@tag.PostCount</td>
                    <td>@tag.Description</td>
                    <td>@tag.CreatedDate.ToShortDateString()</td>
                    <td style="text-align: center">
                        <button class="btn btn-info btn-sm">编辑</button>
                        <button class="btn btn-danger btn-sm">删除</button>
                    </td>
                </tr>
            }

            @*            @for (var i = 0; i < 10; i++)
            {
                <tr>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                    <td>@i.ToString(CultureInfo.InvariantCulture)</td>
                </tr>
            }*@
        </tbody>
    </table>
</div>
<div class="text-right pagination-wapper">
    <ul class="pagination">
        <li class="disabled">
            <a>« Prev</a>
        </li>
        <li class="active">
            <a>1</a>
        </li>
        <li class="disabled">
            <a>Next »</a>
        </li>
    </ul>
</div>