@using System.Globalization
@using FlappyBlog.Domain.Models
@using FlappyBlog.Infrastructure.Paged
@using FlappyBlog.Mvc.Html
@using FlappyBlog.Mvc.Html.Bootstrap.Btn
@model PagedList<Tag>

@{
    ViewBag.Title = "标签管理";
    Layout = "~/Areas/Admin/Views/Shared/AdminBase.cshtml";
}
@Html.Toolbar(new Button { Text = "添加", Type = BtnType.Primary })
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>名称</th>
                <th>文章数</th>
                <th>描述</th>
                <th>创建时间</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model.Items)
            {
                <tr>
                    <td>@tag.Id</td>
                    <td>@tag.Name</td>
                    <td>@tag.PostCount</td>
                    <td>@tag.Description</td>
                    <td>@tag.CreatedDate.ToShortDateString()</td>
                    <td>
                        @Html.Button("编辑").Type(BtnType.Info).Size(BtnSize.Small).Render()
                        @Html.Button("删除").Type(BtnType.Danger).Size(BtnSize.Small).Render()
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-right pagination-wapper">
    <ul class="pagination">
        <li class="disabled">
            <a>« Prev</a>
        </li>
        <li class="active">
            <a>1</a>
        </li>
        <li class="disabled">
            <a>Next »</a>
        </li>
    </ul>
</div>